{
  "name": "auth-service",
  "image": "ghcr.io/userver-framework/ubuntu-22.04-userver-pg-dev:latest",

  "remoteUser": "user",
  "containerEnv": {
    "SHELL": "/bin/bash",
    "CCACHE_CONFIGPATH": "/home/user/auth-service/.ccache/ccache.conf",
    "CCACHE_DIR": "/home/user/auth-service/.ccache"
  },

  "forwardPorts": [
    8080,
    8082
  ],
  "portsAttributes": {
    "8080": {
      "label": "Port for HTTP connections",
      "onAutoForward": "notify"
    },
    "8082": {
      "label": "Port for gRPC client connections",
      "onAutoForward": "notify"
    }
  },

  "features": {
    
  },
  "customizations": {
    "vscode": {
      "settings": {

      },
      "extensions": [
        "ms-vscode.cpptools",
        "vadimcn.vscode-lldb",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "zxh404.vscode-proto3"
      ]
    }
  }
}